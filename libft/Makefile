NAME = libft.a

CC = cc
CFLAGS = -Wall -Wextra -Werror

# Couleurs pour les messages
GREEN = \033[0;32m
YELLOW = \033[0;33m
BLUE = \033[0;34m
RED = \033[0;31m
RESET = \033[0m
BOLD = \033[1m

OBJ_DIR = objs

SRCS =	ft_isalpha.c \
	ft_isdigit.c \
	ft_isalnum.c \
	ft_isascii.c \
	ft_isprint.c \
	ft_isspace.c \
	ft_tolower.c \
	ft_toupper.c \
	ft_strlen.c \
	ft_strlcpy.c \
	ft_strlcat.c \
	ft_memset.c \
	ft_bzero.c \
	ft_memcpy.c \
	ft_memmove.c \
	ft_memchr.c \
	ft_calloc.c \
	ft_strchr.c \
	ft_strrchr.c \
	ft_strnstr.c \
	ft_strdup.c \
	ft_strncmp.c \
	ft_memcmp.c \
	ft_atoi.c \
	ft_striteri.c \
	ft_putstr_fd.c \
	ft_putchar_fd.c \
	ft_putendl_fd.c \
	ft_putnbr_fd.c \
	ft_substr.c \
	ft_strjoin.c \
	ft_strtrim.c \
	ft_itoa.c \
	ft_strmapi.c \
	ft_split.c \
	ft_strncpy.c \
	get_next_line.c \
	ft_printf.c \
	parse_format.c \
	ft_print_char.c \
	ft_print_str.c \
	ft_print_ptr.c \
	ft_print_int.c \
	ft_print_u_int.c \
	ft_print_hex.c \
	ft_strcmp.c \
	ft_strjoin3.c \
	ft_isnumber.c \
	ft_free_tab.c

SRCS_BONUS =	ft_lstnew.c \
	ft_lstadd_front.c \
	ft_lstsize.c \
	ft_lstlast.c \
	ft_lstadd_back.c \
	ft_lstdelone.c \
	ft_lstclear.c \
	ft_lstiter.c \
	ft_lstmap.c

OBJS = $(SRCS:%.c=$(OBJ_DIR)/%.o)
OBJS_BONUS = $(SRCS_BONUS:%.c=$(OBJ_DIR)/%.o)

TOTAL_SRCS = $(words $(SRCS))
TOTAL_BONUS = $(words $(SRCS_BONUS))

all : $(NAME)

$(NAME) : $(OBJS)
	@echo "$(BOLD)$(GREEN)üî® [LIBFT] Cr√©ation de la biblioth√®que $(NAME)...$(RESET)"
	@ar rcs $(NAME) $(OBJS)
	@echo "$(BOLD)$(GREEN)‚úÖ [LIBFT] $(NAME) cr√©√©e avec succ√®s! ($(TOTAL_SRCS) fonctions)$(RESET)"

$(OBJ_DIR)/%.o: %.c
	@mkdir -p $(OBJ_DIR)
	@echo "$(BLUE)üìÅ [LIBFT] Compilation de $(notdir $<)...$(RESET)"
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "$(GREEN)‚úì [LIBFT] $(notdir $<) ‚Üí $(notdir $@)$(RESET)"

bonus : $(OBJS) $(OBJS_BONUS)
	@echo "$(BOLD)$(YELLOW)üéØ [LIBFT] Cr√©ation de la biblioth√®que avec bonus...$(RESET)"
	@ar rcs $(NAME) $(OBJS) $(OBJS_BONUS)
	@echo "$(BOLD)$(GREEN)‚úÖ [LIBFT] $(NAME) avec bonus cr√©√©e! ($(TOTAL_SRCS) + $(TOTAL_BONUS) fonctions)$(RESET)"

clean :
	@if [ -d "$(OBJ_DIR)" ]; then \
		echo "$(YELLOW)üßπ [LIBFT] Nettoyage des fichiers objets...$(RESET)"; \
		rm -rf $(OBJ_DIR) $(OBJS) $(OBJS_BONUS); \
		echo "$(GREEN)‚úì [LIBFT] Fichiers objets supprim√©s$(RESET)"; \
	else \
		echo "$(BLUE)‚ÑπÔ∏è  [LIBFT] Aucun fichier objet √† nettoyer$(RESET)"; \
	fi

fclean : clean
	@if [ -f "$(NAME)" ]; then \
		echo "$(YELLOW)üóëÔ∏è  [LIBFT] Suppression de $(NAME)...$(RESET)"; \
		rm -f $(NAME); \
		echo "$(GREEN)‚úì [LIBFT] $(NAME) supprim√©e$(RESET)"; \
	else \
		echo "$(BLUE)‚ÑπÔ∏è  [LIBFT] $(NAME) d√©j√† supprim√©e$(RESET)"; \
	fi

re : fclean all

rebonus : fclean bonus

.PHONY : clean fclean re all bonus rebonus
